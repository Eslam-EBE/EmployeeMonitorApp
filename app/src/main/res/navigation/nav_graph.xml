<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/employeesListFragment">

    <fragment
        android:id="@+id/employeesListFragment"
        android:name="com.ebe.employeemonitorapp.presentation.employees.EmployeesListFragment"
        android:label="fragment_employees_list"
        tools:layout="@layout/fragment_employees_list">
        <action
            android:id="@+id/action_employeesListFragment_to_employeeDetailsFragment"
            app:destination="@id/employeeDetailsFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_employeesListFragment_to_visitsFragment"
            app:destination="@id/visitsFragment" />
    </fragment>
    <fragment
        android:id="@+id/employeeDetailsFragment"
        android:name="com.ebe.employeemonitorapp.presentation.employeedetails.EmployeeDetailsFragment"
        android:label="fragment_employee_details"
        tools:layout="@layout/fragment_employee_details">
        <argument
            android:name="phone"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="first_date"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="second_date"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/visitsFragment"
        android:name="com.ebe.employeemonitorapp.presentation.visitsview.VisitsFragment"
        android:label="fragment_visits"
        tools:layout="@layout/fragment_visits">
        <argument
            android:name="from"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="to"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>